<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Second_Page">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/oveview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Overview"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/oveview"
            android:fontFamily="sans-serif-medium"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/cdtwo"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="3dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_header"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/revenue_ovrview"
                android:scaleType="centerCrop"/>

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REVENUE OVERVIEW"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/tag"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:layout_marginEnd="39dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/img_1" />

            <TextView
                android:layout_gravity="end"
                android:layout_marginTop="83dp"
                android:layout_marginEnd="53dp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 455.00"
                android:textSize="16dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/heading"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="PRODUCT SALES"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-medium"
                android:text="Show all"
                android:textColor="#EA0D4E"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/one"
            android:layout_below="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/hary_poter"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harry Poster"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hary_poter"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Released 12. 12. 2015"
                android:textColor="#94979C"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_harry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="$354/$3200"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_harry"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_3" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/one"
            android:layout_marginTop="15dp"
            android:background="#D6D6D6" />


        <RelativeLayout
            android:id="@+id/two"
            android:layout_below="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/thory_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="101 Theory Book"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thory_book"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Released 10. 1. 2016"
                android:textColor="#94979C"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_thory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="$136/$200"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_thory"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_4" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/two"
            android:layout_marginTop="15dp"
            android:background="#D6D6D6" />



        <RelativeLayout
            android:id="@+id/three"
            android:layout_below="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/skylines"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skylines"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/skylines"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Released 20. 11. 2014"
                android:textColor="#94979C"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="$89/$100"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_sky"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_5" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/three"
            android:layout_marginTop="15dp"
            android:background="#D6D6D6" />



        <RelativeLayout
            android:id="@+id/four"
            android:layout_below="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/clode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Clouds &amp; Sky 3"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/clode"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Released 20. 5. 2015"
                android:textColor="#94979C"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_cloude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="$58/$300"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_cloude"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_6" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>